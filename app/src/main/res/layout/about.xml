<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_height="wrap_content" android:orientation="vertical" android:layout_width="fill_parent" android:padding="5pt">
    <LinearLayout android:layout_height="wrap_content" android:layout_width="wrap_content">
        <ImageButton android:layout_height="wrap_content" android:layout_width="wrap_content" android:src="@android:drawable/ic_dialog_info" android:paddingRight="5pt" android:background="#00000000" android:layout_gravity="center_vertical"></ImageButton>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/tvTitle" android:text="@string/app_name" android:textSize="22sp"></TextView>
    </LinearLayout>
    <TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:textSize="18sp" android:gravity="center_horizontal" android:layout_marginTop="5sp" android:text="Test application demonstrating SQLite database usage"></TextView>
    <TableLayout android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_gravity="center_horizontal" android:layout_marginTop="5sp">
        <TableRow android:layout_height="wrap_content" android:layout_width="wrap_content">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Author:" android:textSize="20sp" android:gravity="right" android:paddingRight="3pt"></TextView>
		    <TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:textSize="18sp" android:text="Pavel Hermann"></TextView>
        </TableRow>

        <TableRow android:layout_height="wrap_content" android:layout_width="wrap_content">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Mail:" android:textSize="20sp" android:gravity="right" android:paddingRight="3pt"></TextView>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:autoLink="email"
                android:text="pavel.hermann@post.cz"
                android:textSize="20sp"></TextView>
        </TableRow>
        <TableRow android:layout_height="wrap_content" android:layout_width="wrap_content">
        </TableRow>
    </TableLayout>
</LinearLayout>
